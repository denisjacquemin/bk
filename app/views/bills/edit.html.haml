.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "Liste")}", bills_path
      %li= link_to t("assur.general.new"), new_bill_path
      %li.active= link_to t("assur.general.Details"), edit_bill_path
  .content
    %h2.title
      = t("assur.general.Details")
      = t("assur.bill.bill")
    .inner
      = form_for @bill, :url => bills_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'edit_sidebar')