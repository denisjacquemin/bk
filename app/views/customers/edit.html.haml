- content_for :breadcrumb do
  %ul{:id => 'breadcrumb'}
    %li= link_to t('assur.customer.My_customers'), customers_path
    %li= link_to @customer.fullname, customer_path(@customer)
    %li.last= t('assur.customer.edit_user')
.block
  .content
    %h2
      = @customer.fullname
    .inner
      = form_for @customer, :url => customer_path(@customer), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f }
- content_for :sidebar, render(:partial => 'edit_sidebar', :locals => {:customer => @customer})
