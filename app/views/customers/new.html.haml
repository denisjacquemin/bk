- content_for :breadcrumb do
  %ul{:id => 'breadcrumb'}
    %li= link_to t('assur.customer.My_customers'), customers_path
    %li.last
      = t("assur.general.new")
      = t("assur.customer.customer")
.block
  .content
    %h2.title
      = t("assur.general.new")
      = t("assur.customer.customer")
    .inner
      = form_for @customer, :url => customers_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'new_sidebar')
